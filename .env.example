# Telegram bot token (get from BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# OpenRouter-compatible API base URL (e.g. https://api.openrouter.ai/v1)
OPENROUTER_API_BASE=https://api.openrouter.ai/v1
# OpenRouter API key
OPENROUTER_API_KEY=your-openrouter-api-key
# Optional: bot username (used to detect @mentions). If not set the bot will fetch it on startup
BOT_USERNAME=
# Conversation model (compatible with OpenRouter)
MODEL=gpt-4o-mini

# Optional: set to "true" to enable debug logging
DEBUG=false
